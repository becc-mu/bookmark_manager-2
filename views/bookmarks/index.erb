<form method="post" action="/bookmarks/new">
  <input type="text" name="url" placeholder="URL" />
  <input type="text" name="title" placeholder="Title" />
  <input type="submit" value="Submit" />
</form>
<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <a href="<%= bookmark.url %>">
        <%= bookmark.title %>
      </a>
    </li>
  <% end %>
</ul>
